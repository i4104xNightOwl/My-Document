<div class="row">
    <div class="col-md-12">
        <div class="d-flex align-items-center mb-4">
            <h1 class="mb-0"><%= document.title %></h1>
            <div class="ms-auto">
                <a href="/documents/<%= document.slug %>/edit" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i> Sửa
                </a>
            </div>
        </div>

        <div class="content mb-5">
            <%- document.content %>
        </div>

        <!-- Nút điều hướng -->
        <div class="navigation-buttons border-top pt-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="prev-post">
                    <% if (prevDoc) { %>
                        <a href="/documents/<%= prevDoc.slug %>" 
                            style="border: 1px solid rgb(209, 209, 209);"
                            class="nav-link prev-link d-flex align-items-center p-3 rounded shadow-sm hover-shadow">
                            <div>
                                <div class="text-muted small mb-1">Bài viết trước đó</div>
                                <div class="d-flex align-items-center text-primary">
                                    <i class="bi bi-chevron-left me-2"></i>
                                    <span class="fw-medium text-truncate" style="width: 180px;">
                                        <%= prevDoc.title %>
                                    </span>
                                </div>
                            </div>
                        </a>
                    <% } %>
                </div>

                <div class="next-post">
                    <% if (nextDoc) { %>
                        <a href="/documents/<%= nextDoc.slug %>" 
                            style="border: 1px solid rgb(209, 209, 209);"
                            class="nav-link next-link d-flex align-items-center p-3 rounded shadow-sm hover-shadow text-end">
                            <div>
                                <div class="text-muted small mb-1">Bài viết tiếp theo</div>
                                <div class="d-flex align-items-center text-primary">
                                    <span class="fw-medium text-truncate" style="width: 180px;">
                                        <%= nextDoc.title %>
                                    </span>
                                    <i class="bi bi-chevron-right ms-2"></i>
                                </div>
                            </div>
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div> 